<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MemberFindLoginIdActivity2">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/reallogo">

    </ImageView>


    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="아이디 찾기"
        android:textColor="#eee6c4"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:hint="이름을 입력해주세요"
        android:inputType="text"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signmail"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:hint="이메일를 입력해주세요"
        android:inputType="text"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonDoFindLoginId"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#eee6c4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="아이디 찾기" />
        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#eee6c4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="뒤로가기"/>



    </LinearLayout>

</LinearLayout>