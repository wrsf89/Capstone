<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/reallogo">

    </ImageView>
    <TextView
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:textColor="#EEE6C4"
        android:text="MYPAGE"
        android:textSize="35dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center">



        <Button
            android:id="@+id/btn_test2"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#EEE6C4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40dp"
            android:text="내 정보" />
        <Button
            android:id="@+id/matching_list"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#EEE6C4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40dp"
            android:text="매칭 목록" />


        <Button
            android:id="@+id/btn_test3"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#EEE6C4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40dp"
            android:text="신청 조회" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="105dp">


        <ImageButton
            android:id="@+id/bottomHomeBtn"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/bottomMyPageBtn"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person"/>

        <ImageButton
            android:id="@+id/bottomBackBtn"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back"/>

    </LinearLayout>

</LinearLayout>
